<%- include("../layout.ejs")%>
<%- include("../layouts/adminhead.ejs") %> 



<div class="container-fluid">

    <!-- Page Heading -->

    <div class="container-fluid">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">

            <h1 class="h3 mb-2 text-gray-800">Category's</h1>
            <a href="/admin/addCategory" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                class="fas fa-download fa-sm text-white-50"></i> New category</a>
        </div>
    </div>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <% if(locals.message){ %>
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary"><%= message %></h6>
        </div>
        <% } %>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Discription</th>
                          
                            <th>Start date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% category.forEach(element =>{%>
                        <tr>
                            <td><%=  element.name%></td>
                            <td><%= element.discription %></td>
                            
                                
                            <td scope="col" class="TableButton align-items-center  d-flex flex-column gap-2 px-5 p-2">
                                
                                    <a href="/admin/editCategory/<%= element._id %>" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">Edit</a>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>