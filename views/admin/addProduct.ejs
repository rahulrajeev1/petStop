<%- include("../layouts/adminhead.ejs") %>
<section>
  <section class="h-100 h-custom" style="background-color: #8fc4b7;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-8 col-xl-6">
          <div class="card rounded-3">
            <!-- <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img3.webp"
                  class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
                  alt="Sample photo"> -->
            <div class="card-body p-4 p-md-5">
              <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Registration Info</h3>

              <form class="px-md-2" action="/admin/addProduct" enctype="multipart/form-data" method="post" onsubmit="return validateForm()"> 
              <!-- <form class="px-md-2"   id="form" enctype="multipart/form-data"> -->

                <div class="form-outline mb-4">
                  <input type="text" id="form3Example1q" class="form-control" name="name" id="name" required />
                  <label class="form-label" for="form3Example1q">Name</label>
                </div>
                <div class="form-outline mb-4">
                  <label class="form-label" for="form3Example1q">Category</label><br>
                  <select class="form-select"  id="form3Example1q" class="form-control" name="Category" id="category" aria-label="Default select example">
                    
                    <% cateData.forEach((category) => { %>
                      <option value="<%=category._id%>"><%= category.name %></option>
                      <% }) %>
                    </select>

                </div>
                
                <div class="form-outline mb-4">
                  <input type="number" id="form3Example1q" class="form-control" name="Price" id="Price" required />
                  <label class="form-label" for="form3Example1q">Price</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="text" id="form3Example1q" class="form-control" name="brand" required />
                  <label class="form-label" for="form3Example1q">Brand</label>
                </div>
                <div class="form-outline mb-4">
                  <input type="number" id="form3Example1q" class="form-control" name="quantity" min="0" id="quantity" onchange="handleFileInput(event)" required />
                  <label class="form-label" for="form3Example1q">Quantity</label>
                </div>
                <div class="form-outline mb-4">
                  <input type="file" id="productImg" class="form-control" name="image" accept=".png, .jpg" required  multiple />
                  <label class="form-label" for="form3Example1q">Images</label>
                </div>

                <div class="form-group">
                  <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="discription" required></textarea>
                  <label class="form-label" for="form3Example1q">Description</label>
                </div>

                <div class="row">
                  <div class="col-md-6 mb-4">
                    <div class="form-outline datepicker">
                      <input type="number" class="form-control" id="exampleDatepicker1" min="2" max="9" name="rating" required />
                      <label for="exampleDatepicker1" class="form-label">Rating</label>
                    </div>
                   
                  </div>

                </div>
                
                <!-- <button type="submit" id="addProduct" class="btn btn-success btn-lg mb-1">Submit</button> -->
                <button type="submit" class="btn btn-success btn-lg mb-1">Submit</button>

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</section>
