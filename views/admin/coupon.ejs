<script>
 async function removeCoupon(CouponId){
  try {
    console.log(CouponId)
    const response = await fetch(`/admin/couponDelete/${CouponId}`,{method:"POST"})
    if(response.ok){
      alert("deleted the coupon")
      location.href="/admin/viewCoupon"
    }else{
      alert("some error to delete")
    }
  } catch (error) {
    console.log(error.message)
  }
 }
</script>

